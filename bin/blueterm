#!/bin/sh

myname=`basename $0`

case "$1" in
-*) echo "使い方: ${myname} [-h] [名前]"
    echo "        [名前]はTeCにつけてある8文字以内の名前です．"
    echo "        [名前]が不明の場合は[名前]を省略して${myname}を起動します．"
    echo "        [名前]が省略されると${myname}は周辺のTeCをスキャンします．"
    echo "        その場合は，番号でTeCを選択することができます．"
    exit 1;;
esac

if [ $# -le 0 ]; then
    stty raw
    /usr/local/bin/BlueTerminal
    stty -raw
else
    if [ `expr $1 : .\*` -gt 8 ]; then
      echo "\"$1\" は間違った名前です（正しい名前は8文字以内です）．"
      exit 1
    fi
    stty raw
    /usr/local/bin/BlueTerminal "$1"
    stty -raw
fi

exit 0
